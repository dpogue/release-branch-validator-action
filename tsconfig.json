{
    "compilerOptions": {
        "target": "es2020",
        "module": "es6",
        "declaration": false,
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "inlineSources": true,
        "strict": true,
        "pretty": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["es2020"]
    },
    "include": [
        "src/*.ts"
    ]
}
